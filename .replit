modules = ["python-3.11", "nodejs-20", "java-graalvm22.3", "java-17", "go-1.24"]
[nix]
channel = "stable-25_05"
packages = ["cargo", "libiconv", "libxcrypt", "openssl", "pkg-config", "postgresql", "rustc", "unzip", "flutter", "jq", "zip"]

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Android Go Backend (Port 8000)"

[[workflows.workflow]]
name = "Android Go Backend (Port 8000)"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/backend && go run cmd/main.go"
waitForPort = 8000

[[ports]]
localPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && python -m uvicorn server:app --host 0.0.0.0 --port 8000 & cd frontend-nextjs && npm start"]
build = ["bash", "-c", "cd frontend-nextjs && npm run build && cd ../backend && pip install -r requirements.txt"]
